{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "es2015",
        "lib": ["es2015"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@aws-sdk/client-dynamodb": [
                "./src/layers/deps/nodejs/node_modules/@aws-sdk/client-dynamodb"
            ]
        }
    },
    "exclude": ["node_modules", "**/*.test.ts", "**/*/node_modules"],
    "include": ["src/**/*.ts"]
}
