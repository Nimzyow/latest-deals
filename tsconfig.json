{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "es2015",
        "lib": ["es2015"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@aws-sdk/client-dynamodb": [
                "./src/layers/deps/nodejs/node_modules/@aws-sdk/client-dynamodb"
            ],
            "@middy/core": ["./src/layers/deps/nodejs/node_modules/@middy/core"],
            "@middy/http-error-handler": [
                "./src/layers/deps/nodejs/node_modules/@middy/http-error-handler"
            ],
            "@middy/validator": ["./src/layers/deps/nodejs/node_modules/@middy/validator"],
            "@middy/validator/transpile": [
                "./src/layers/deps/nodejs/node_modules/@middy/validator/transpile"
            ],
            "@middy/input-output-logger": [
                "./src/layers/deps/nodejs/node_modules/@middy/input-output-logger"
            ],
            "@middy/http-json-body-parser": [
                "./src/layers/deps/nodejs/node_modules/@middy/http-json-body-parser"
            ]
        }
    },
    "exclude": ["node_modules", "**/*.test.ts", "**/*/node_modules"],
    "include": ["src/**/*.ts"]
}
